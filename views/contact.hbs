<div class="form-contact">
    <div class="form-text">
        <div class="form-title-blue">
            KAKO VAM MOZEMO POMOCI
        </div>
        <div class="form-title-black">
            VASA PORUKA
        </div>
    </div>
    <div class="form">
        <form id="contact-form">
            <div class="row">
                <input id="first_last_name" type="text" placeholder="First and last name">
            </div>
            <div class="row-two">
                <input type="text" placeholder="Email">
                <input id="phone-number" type="number" placeholder="Phone">
            </div>
            <div class="row-three">
                <textarea id="message" placeholder="Message"></textarea>
            </div>
            <div class="form-btn"><button id="submit-btn" type="submit">Posalji</button></div>
        </form>
    </div>
</div>
